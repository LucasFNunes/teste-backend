{
  "compilerOptions": {
   "target": "es2017",                                 
   "module": "commonjs",                               
   "esModuleInterop": true,          
   "rootDir": "src",          
   "outDir": "dist",        
   "forceConsistentCasingInFileNames": true,           
   "strict": true,                                     
   "skipLibCheck": true,
   "moduleResolution": "node"                              
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
